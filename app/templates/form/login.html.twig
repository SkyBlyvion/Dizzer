{% extends 'base.html.twig' %}

{% block title %}Identification{% endblock %}

{% block body %}
    <div  class="container">
        <h2 class="text-center mt-5">Identification</h2>
        <div class="card w-50 mt-3 ms-auto me-auto">
            <div class="card-body">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey }}</div>
                {% endif %}
                <form method="post" action="{{path('login')}}">{# on post sur la m√©thode login #}
                    <div class="form-group">
                        <label for"email">Identifiant</label>
                        <input type="text" class="form-control" id="email" name="_username" value="{{ lastMail }}">
                    </div>
                    <div class="form-group">
                        <label for"password">Mot de passe</label>
                        <input type="password" class="form-control" id="password" name="_password">
                    </div>
                    <div class="d-flex justify-content-center mt-4">
                        {# bouton de retour a l'accueil #}
                        <a href="{{ path('accueil') }}" class="btn btn-sm btn-outline-warning me-2">Retour</a>
                        {# bouton de connexion #}
                        <button type="submit" class="btn btn-sm btn-outline-primary">Connexion</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}